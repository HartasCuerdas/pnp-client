<% title "Day (#{@day.str_date})" %>
<% body_classes "pnpC-day pnpC-show" %>

<h1><%= yield :title %></h1>

<p>
  oTotal: <span id="pnpC-oTotal"><%= @day.oTotal %></span>, dTotal: <span id="pnpC-dTotal"><%= @day.dTotal %></span>
</p>

<div class="pnpC-controls">
  <%= link_to t('Back'), week_path(@day.week_id), :class=>"btn btn-primary" %>
</div>

<p id="notice"><%= notice %></p>

<table id="pnpC-ods-table" class="table">
  <thead>
    <tr>
      <th>Timekey</th>
      <th>O</th>
      <th>D</th>
    </tr>
  </thead>
  <tbody>
    <%= render @day.ods %>
  </tbody>
</table>

<div class="pnpC-clearer"></div>

<div class="pnpC-controls">
  <%= link_to t('Back'), week_path(@day.week_id), :class=>"btn btn-small btn-primary" %>
</div>
