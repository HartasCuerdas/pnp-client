<% title "Day (#{@day.str_date})" %>
<% body_classes "pnpC-day pnpC-show" %>

<h1><%= yield :title %></h1>

<p>
  oTotal: <span id="pnpC-oTotal"><%= @day.oTotal %></span>, dTotal: <span id="pnpC-dTotal"><%= @day.dTotal %></span>
</p>

<div class="pnpC-controls">
  <%= link_to t('Back'), week_path(@day.week_id), :class=>"btn btn-small btn-primary" %>
</div>

<p id="notice"><%= notice %></p>

<table id="pnpC-ods-table" class="table">
  <thead>
    <tr>
      <th>Timekey</th>
      <th>O</th>
      <th>D</th>
    </tr>
  </thead>
  <tbody>
    <% @day.ods.each do |od| %>
    <tr>
      <td class="pnpC-timekey"><%= od.timekey %></td>
      <td><%= link_to od.str_o_enabled, ods_toggle_o_path(od.id), :method => :put, :remote => true, :class=>"pnpC-btn-o-toggle btn btn-small " + od.str_o_TwbsBtnStyleClass %></td>
      <td><%= link_to od.str_d_enabled, ods_toggle_d_path(od.id), :method => :put, :remote => true, :class=>"pnpC-btn-d-toggle btn btn-small " + od.str_o_TwbsBtnStyleClass %></td>
    </tr>
    <% end %> 
  </tbody>
</table>

<div class="pnpC-clearer"></div>

<div class="pnpC-controls">
  <%= link_to t('Back'), week_path(@day.week_id), :class=>"btn btn-small btn-primary" %>
</div>
